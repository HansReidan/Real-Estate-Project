<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- FORM -->
    <record id="offerte_proprietà_form" model="ir.ui.view">
        <field name="name">estate.property.offers.form</field>
        <field name="model">estate.property.offers</field>
        <field name="arch" type="xml">
            <form string="Tag">
                <sheet>
                    <group>
                        <field name="prezzo"/>
                        <field name="partner_id"/>
                        <field name="validita"/>
                        <field name="date_deadline"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- LIST -->
    <record id="offerte_proprietà_list" model="ir.ui.view">
        <field name="name">estate.property.offers.list</field>
        <field name="model">estate.property.offers</field>
        <field name="arch" type="xml">
            <list string="Offerte">
                <field name="prezzo"/>
                <field name="partner_id"/>
                <field name="validita"/>
                <field name="date_deadline"/>
            </list>
        </field>
    </record>
</odoo>