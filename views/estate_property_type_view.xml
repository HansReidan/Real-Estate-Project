<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- LIST, FORM, ACTION -->

    <!-- LIST -->
    <record id="tipo_proprieta_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <list string="Immobili">
                <field name="property_type"/>
            </list>
        </field>
    </record>

    <!-- FORM -->
    <record id="tipo_proprieta_form" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Proprietà">
                <sheet>
                    <group>
                        <field name="property_type"/>
                    </group>
                    <notebook>
                        <page name="Proprietà">
                            <group>
                                <field name="property_ids">
                                    <list multi_edit="1">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                        <field name="expected_price"/>
                                        <field name="state"/>
                                    </list>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="tipo_proprieta_action" model="ir.actions.act_window">
        <field name="name">Inserisci Tipo Proprietà</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Inserisci Immobile.
            </p>
        </field>
    </record>

</odoo>