<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ha9d-d5h3-cbux -->

    <record id="crea_immobile_list" model="ir.ui.view">
        <field name="name">estate.property.list</field> <!-- dev'essere messo il .list -->
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Immobili">
                <field name="name"/>
                <field name="description"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="garden_area"/>
                <field name="garden_orientation"/>
                <field name="active"/>
                <field name="state" optional="hide"/>
                <field name="user_id" optional="hide"/>
                <field name="partner_id" optional="hide"/>
                <field name="property_tag_ids" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="crea_immobile_form" model="ir.ui.view">
        <field name="name">estate.property.form</field> <!-- .form è richiesto -->
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Immobili">
                <!-- group e sheet modificano la disposizione -->
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <field name="property_tag_ids" widget="many2many_tags"/>
                    <group>
                        <group>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Informazioni">
                            <group>
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                </group>
                                <group>
                                    <field name="garden"/>
                                    <field name="garden_area"/>
                                    <field name="garden_orientation"/>
                                    <field name="active"/>
                                    <!-- placeholder, help -->
                                    <field name="state"/>
                                </group>
                            </group>
                        </page>
                        <page string="Altre Info">
                            <group>
                                <field name="user_id"/>
                                <field name="partner_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/><!-- Semplificato -->
            </form>
        </field>
    </record>

    <record id="ricerca_immobile_form" model="ir.ui.view">
        <field name="name">estate.property.ricerca</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Tests"> <!-- Cosa voglio ricercare -->
                <field name="postcode"/> <!-- case sensitive -->
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <filter string="Nuova" name="state_check"
                        domain="[('state', '=', 'nuova')]"/> <!-- Filtri di ricerca -->
                <filter string="Offerte Ricevute" name="state_check" domain="[('state', '=', 'offerta ricevuta')]"/>
                <!-- Se qui metto un <separator/> l'operazione diventa una AND, non più OR -->
                <!-- DOMAIN [('model_id', 'operator', 'value')] -->
                <group expand="1" string="Raggruppa per">
                    <filter string="CAP" name="raggruppa_per" context="{'group_by' : 'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="crea_immobile_action" model="ir.actions.act_window">
        <field name="name">Inserisci Immobile</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="crea_immobile_list"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Nessun tipo di proprietà ancora inserito. Crea uno nuovo!
            </p>
        </field>
    </record>
</odoo>